pad-v = 12px
pad-h = 6px

.search-results
  list-style none
  padding    0

.search-result
  position       relative
  display        block
  padding        pad-v pad-h

  font-family    sans-serif
  font-size      12px
  text-shadow    0 1px 0 black

  cursor pointer

  &-title
    font-size 18px

  &:hover
    background rgba(0,0,0,0.5)

.search-result-bpm-and-key
  position absolute
  top      pad-v
  right    pad-h
  cursor   default

.search-result-label
  font-size      10px
  text-transform uppercase
  letter-spacing 1px
  background     rgba(0,0,0,0.3)
  padding        1px 6px
  border-radius  8px
